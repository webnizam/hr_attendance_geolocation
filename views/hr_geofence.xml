<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="geofence_form" model="ir.ui.view">
        <field name="name">hr.geofence.form</field>
        <field name="model">hr.geofence</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Fence Name" />
                            <field name="active" string="Active" />
                        </group>
                        <group>
                            <field name="latitude" string="Latitude" />
                            <field name="longitude" string="Longitude" />
                            <field name="radius" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>